{
  "name": "lammppuzzzle",
  "version": "1.0.0",
  "description": "An original puzzle game inspired by MMORPG dungeon mechanics. Guess the correct lamp position sequence based on lighting patterns.",
  "main": "script.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npm-run-all --parallel lint:js lint:html lint:css",
    "lint:sequential": "eslint *.js && htmlhint *.html && stylelint *.css",
    "lint:fix": "npm-run-all --parallel lint:js:fix lint:css:fix && npm run format",
    "lint:js": "eslint *.js",
    "lint:js:fix": "eslint *.js --fix",
    "lint:html": "htmlhint *.html",
    "lint:css": "stylelint *.css",
    "lint:css:fix": "stylelint *.css --fix",
    "css:purge": "purgecss --css style.css --content index.html script.js --output style.purged.css",
    "css:analyze": "purgecss --css style.css --content index.html script.js --output style.analysis.css",
    "css:uncss": "uncss index.html --csspath . --output style.uncss.css",
    "format": "prettier --write *.js *.html *.css *.md",
    "format:check": "prettier --check *.js *.html *.css *.md",
    "check:all": "npm-run-all --parallel lint format:check",
    "fix:all": "npm-run-all lint:fix format",
    "prepare": "husky"
  },
  "keywords": [
    "puzzle",
    "game",
    "javascript",
    "web-app",
    "logic-puzzle"
  ],
  "author": "pocotaru",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pocotaru/LammpPuzzzle.git"
  },
  "homepage": "https://pocotaru.github.io/LammpPuzzzle",
  "bugs": {
    "url": "https://github.com/pocotaru/LammpPuzzzle/issues"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "htmlhint": "^1.7.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "purgecss": "^7.0.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "uncss": "^0.17.3"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.html": [
      "htmlhint",
      "prettier --write"
    ],
    "*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
